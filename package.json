{
  "name": "tourist_trap",
  "version": "1.0.0",
  "description": "Tourist Trap Counter - A web app for tracking and rating tourist traps using Express.js, HTMX and Postgres",
  "main": "index.js",
  "scripts": {
    "dev": "dotenv -e .env -- ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:generate": "dotenv -e .env -- drizzle-kit generate",
    "db:push": "dotenv -e .env -- drizzle-kit push",
    "vercel-build": "tsc && cp -r public dist/"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@vercel/node": "^5.5.0",
    "@vercel/postgres": "^0.10.0",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.38.4",
    "express": "^4.21.2",
    "htmx.org": "^1.9.12",
    "pg": "^8.16.3",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@types/express": "^5.0.4",
    "@types/node": "^22.18.12",
    "@types/pg": "^8.15.5",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.30.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
